{
  "name": "peekandpoke/psi",
  "description": "Java Streams Api inspired implementation for PHP. Php Streams Impl: PSI",
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "PeekAndPoke",
      "email": "karsten.john.gerber@googlemail.com"
    }
  ],
  "minimum-stability": "stable",

  "require": {
    "php": ">=5.6",
    "ext-pcre": "*",
    "peekandpoke/php-types": "^1.1.5",
    "symfony/polyfill-mbstring": "^1.6.0"
  },

  "require-dev": {
    "phpunit/phpunit": "^4.8.36",
    "doctrine/instantiator": "1.0.5"
  },

  "autoload": {
    "psr-4": {
      "PeekAndPoke\\Component\\Psi\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PeekAndPoke\\Component\\Psi\\": "tests"
    }
  }
}
